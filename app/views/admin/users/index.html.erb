<div class="container">
   <div class="row">
        <div class="col-xs-3">
		  <%= render 'admin/users/sidebar' %>
        </div>


		<div class="col-xs-9">
		  <h1>ユーザー管理一覧</h1>
		   <h3 class="pull-right">表示数1~10件</h3>

		   <script type="text/javascript">
               $(function() {
                $('h3').css('color','lime');
               });
           </script>

			<table class="table table-bordered">
				<tr class="active">
	              <th>ID</th>
	              <th>名前</th>
	              <th>フリガナ</th>
	              <th>電話番号</th>
	              <th> </th>
	            </tr>
	            <tr class="active">
			   <% @users.each do |user| %>
	              <td class="active"><%= user.id %></td>
	              <td class="active"><%= user.lastname %><%= user.firstname %></td>
	              <td class="active"><%= user.lastname_kana %><%= user.firstname_kana %></td>
	              <td class="active"><%= user.phone %></td>
	              <td class="active"><%= link_to"ユーザー情報編集", edit_admin_user_path(user.id) %></td>
	            </tr>
               <% end %>
            </table>
		</div>
    </div>
</div>

<div class="pagiWrapper">
 <%= paginate @users %>
</div>