<div class="container">
   <div class="row">
        <div class="col-xs-3">
		  <%= render 'admin/users/sidebar' %>
        </div>


		<div class="col-xs-9">
		  <h1>ユーザー管理一覧</h1>
			<table class="table table-striped">
			   <% @users.each do |user| %>
			    <tr>
	              <th>ID</th>
	              <th>名前</th>
	              <th>フリガナ</th>
	              <th>電話番号</th>
	              <th> </th>
	            </tr>
	            <tr>
	              <td><%= user.id %></td>
	              <td><%= user.lastname %><%= user.firstname %></td>
	              <td><%= user.lastname_kana %><%= user.firstname_kana %></td>
	              <td><%= user.phone %></td>
	              <td><%= link_to"ユーザー編集", edit_public_user_path(user.id) %></td>
	              <td><%= link_to"購入履歴", public_orders_path %></td>
	            </tr>
               <% end %>
            </table>
		</div>
    </div>
</div>



