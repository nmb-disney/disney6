<div class="container">
   <div class="row">
        <div class="col-xs-3">
		  <%= render 'admin/users/sidebar' %>
        </div>


      <div class="col-xs-9">
        <h1>admin商品管理一覧</h1>

          <%= form_tag(admin_cds_path, :method => 'get') do %>
           <%= select_tag(:option, options_for_select([["アーティスト名", "1"],["曲名","2"],["ステータス","3"]]))%>
             <%= text_field_tag :search %>
              <%= submit_tag '検索' %>
             <h1>商品一覧</h1>
           <% end %>
              <table>
                  <tr>
                    <th>入荷日時</th>
                    <th>アーティスト名</th>
                    <th>タイトル</th>
                    <th>値段</th>
                    <th>ステータス</th>
                  </tr>
                <% @cds.each do |cd| %>
                  <% cd.restocks.each do |restock| %>
                    <tr>
　　　　　　　　　　　　　<td><%= restock.restock_date %></td>
                      <td><%= cd.artist.artist_name %></td>
                      <td><%= cd.cd_title %></td>
                      <td><%= cd.price %></td>

                      <td><%= cd.status %></td>
                       <td><%= link_to "入荷を追加する", new_admin_restock_path(@cds), class:"btn btn-primary" %>
                           <td><%= link_to "編集", edit_admin_cd_path(cd.id),   class:"btn btn-success" %></td>
               <% end %>
　　　　　　　　　　　　</tr>
               <% end %>
              </table>
       </div>
   </div>
</div>
