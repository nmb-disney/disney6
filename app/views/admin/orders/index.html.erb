<div class="container">
   <div class="row">
        <div class="col-xs-3">
		  <%= render 'admin/users/sidebar' %>
        </div>


		<div class="col-xs-9">
		  <h1>admin受注一覧</h1>
		   <h3 class="pull-right">表示数1~10件</h3>
		   <table class="table table-striped">
		   	<thead>
		   		<tr>
		   			<th>ID</th>
		   			<th>名前</th>
		   			<th></th>
		   			<th>ステータス</th>
		   			<th></th>
		   		</tr>
		   	</thead>
		   	<tbody>
		   	<% @orders.each do |o| %>
		   		<tr>
		   			<td><%= o.id %></td>
		   			<td><%= o.firstname %></td><td><%= o.lastname %></td>
		   			<td><%= o.deliver_status %></td>
		   			<td><%= link_to "詳細", admin_order_path(o.id) %></td>
		   		</tr>
		   	<% end %>
		   	</tbody>
		   </table>
		</div>
    </div>
</div>

<div class="pagiWrapper">
  <%= paginate @orders %>
</div>
