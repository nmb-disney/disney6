                <th>アルバム名</th>
                <th>入荷日</th>
                <th>数量</th>
              </tr>

              <% @restocks.each do |restock| %>
                <tr>
                  <td class="active"><%= restock.cd.artist.artist_name %></td>
                  <td class="active"><%= restock.cd.cd_title %></td>
                  <td class="active"><%= restock.restock_date %></td>
                  <td class="active"><%= restock.restock_count %></td>
                </tr>
              <% end %>
           </table>
		    </div>
    </div>
</div>


