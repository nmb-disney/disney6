	<%= form_tag(new_public_order_path, method: :get) do %>
<table>
	<h3>カートの中身</h3>
		<tr>
			<th>アーティスト名
			<th>CDタイトル
			<th>注文枚数
			<th>商品単価(税込)

		<% @user_cart.each do |cart| %>
		<tr>
			<td><%= cart.cd.artist.artist_name %>
			<td><%= cart.cd.cd_title %>
				<% @cdid = cart.cd_id %>
				<%= hidden_field :count1, nil, value: @cdid %>
			<td><%= number_field :count, nil, min: 1, max: 9, size: 1, value: cart.cart_count %>枚
			<td><% @total = cart.cd.price * @tax %>
				<%= @total.floor %>円(税込)
		<% end %>
</table>


<div>
  <%= radio_button_tag :add, "1" %>
  <%= label :add, "登録住所に配送" %>
	<h4>郵便番号</h4>
	<%= @user.postalcode %>
	<h4>住所</h4>
	<%= @user.address %>
	<h4>宛名</h4>
	<h5><%= @user.lastname %>  <%= @user.firstname %>  様</h5>
</div>

<div>
  <%= radio_button_tag :add, "2" %>
  <%= label :add, "指定の住所に配送" %>
	<h4>郵便番号</h4>
	  <%= text_field_tag :add1, nil, size:"9" %>
 	<h4>住所</h4>
  <%= text_field_tag :add2 %>
  <h4>宛名</h4>
	<table>
	<tr>
		<th>　　姓<th>　　名
	<tr>
		<td><%= text_field_tag :add3, nil, size:"8" %>
		<td><%= text_field_tag :add4, nil, size:"8" %>
		</td>
</table>

</div>

<div>
	<%= radio_button_tag :pay, "a" %>
	<%= label :pay, "クレジット" %>

	<%= radio_button_tag :pay, "b" %>
	<%= label :pay, "代金引き換え" %>

	<%= radio_button_tag :pay, "c" %>
	<%= label :pay, "銀行振り込み" %>
</div>


  <%= submit_tag '注文確認ページへ' %>
<% end %>

