<div class="container">
    <div class="row">
        <div class="col-md-9">
          <h1>Public商品検索結果</h1>
          <% if @search_option == "1" %>
            <h2>あいまい検索</h2>
            <h5>検索内容　<%= @search_text %></h5>
            <h4>検索結果　<%= @search_a.count + @searchs.count %>件</h4>
              <table>
                <% @search_a.each do |artist| %>
                  <thead>
                    <tr>
                        <th><%= artist.artist_id %> </th>
                      </tr>
                  </thead>
                <% end %>
              </table>
              <table>
              	<% @search_t.each do |cd| %>
                	<thead>
                  	<tr>
                    	<th><%= cd.cd_title %></th>
                  	</tr>
                	</thead>
              	<% end %>
              </table>


<% elsif @search_option == "2"%>
  <h2>アーティスト検索</h2>
  <h5>検索内容　<%= @search_text %></h5>
  <h4>検索結果　<%= @search_a.count %>件</h4>
    <table>
      <% @search_a.each do |cd| %>
        <thead>
          <tr>
            <th><%= cd.artist_name %><th>
          </tr>
        </thead>
      <% end %>
    </table>

<% else @search_option == "3" %>
  <h2>CDタイトル検索</h2>
  <h5>検索内容　<%= @search_text %></h5>
  <h4>検索結果　<%= @search_t.count %>件</h4>
<table>
    <% @search_t.each do |cd| %>

            <tr>
                <th><%= cd.cd_title %><th><%= cd.artist.artist_name %>

        <tr>
          <td><td>
    <% end %>
  </table>
<% end %>
<div class="pagiWrapper">
<%= paginate @searchs %>
</div>
