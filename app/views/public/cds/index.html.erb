<div class="toppage">
  <div class="container-flaud">


<!-- <div class="col-md-3" style="padding:20px; background-color: white;"> -->

<div class="row">
  <div class="col-md-9">
    <div class="row">
    <% @cds.each do |cd| %>

    <div class="col-md-3">

      <div class="row">
        <div class="col-md-11" style="background-color: white; margin: 20px 30px;">

          <div class="row text-center" style="margin-top: 10px">
            <%= link_to public_cd_path(cd.id) do %>
              <%= attachment_image_tag cd, :jacket_image, :fill, 100, 100, size: '220x220', fallback: "no_image.jpg" %>
            <% end %>
          </div>

          <div class="row">
            <div class="col-md-12">
            <% if cd.stock == 0 %>
              <span class="label label-danger">　　　　　　　　在庫なし　　　　　　　　</span>
            <% elsif cd.status == 2%>
              <span class="label label-warning"><%= cds.status.to_a %></span>
            <% else %>
              <span class="label label-success">　　　　　　　　在庫あり　　　　　　　　</span>
            <% end %>
          </div>
        </div>

          <div class="row">
            価格： <% cd.price * @tax %><%= cd.price.floor %><br>
            アーティスト: <%= cd.artist.artist_name %><br>
            CDタイトル: <%= cd.cd_title %><br>
            発売日 <%= cd.release_date.strftime("%m月%d日") %>
          </div>

          <div class="row">
            <div class="col-md-5" style="padding: 10px 0px 10px;">
              <%= form_for [:public, @interest_new], url: public_interests_path(cd_id: cd.id) do |f| %>
                <%= f.submit "気になる",class: "btn btn-primary btn-block" %>
              <% end %>
            </div>

            <div class="col-md-7" style="padding: 10px 0px 10px;">
              <%= form_for [:public, @cart_cd_new], url: public_cart_cds_path(cd_id: cd.id) do |f| %>
                <%= f.hidden_field :cart_count, :value => "1" %>
                <%= f.submit "カートに入れる",class: "btn btn-danger btn-block" %>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
    <% end %>
</div>
</div>

<div class="col-md-3">
  <div class="row">
    <div class="col-md-10" style="background-color: #EEEEEE; margin: 20px 30px;">
      <h2>レビュー</h2>
      <h5 class="text-right">最新12件</h5>
        <% @reviews.each do |r| %>
          <div class="row">
          <div class="col-md-11" style="background-color:   #EEFFFF; margin: 0px 10px 10px 10px;">

            <div class="row">
              <div class="col-md-4" style="padding-top: 5px;">
                <%= link_to public_cd_path(r.cd.id) do %>
                  <%= attachment_image_tag r.cd, :jacket_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'80x80' %>
                <% end %>
              </div>

              <div class="col-md-8">
                <%= attachment_image_tag r.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40', class: "img-circle"%>
                <%= r.user.firstname_kana %>&emsp;<br>
                <%= r.comment %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12" style="padding-top: 5px;">
                <%= link_to public_cd_path(r.cd.id) do %>
                  <h4><%= r.cd.cd_title %></h4>
                <% end %>
              </div>
            </div>

          </div>
          </div>

        <% end %>

    </div>
  </div>
</div>

        <div class="pagiWrapper">
            <%= paginate @cds %>
        </div>

</div>