<div class="container">
  <h3 class="pull-right">表示数1~12件</h3>
    <div class="row">
        <div class="col-md-9" style="padding: 10px;">
            <h1>店長おすすめ！</h1>
              <% @cds.each do |cd| %>
                <div class="col-md-3">
                    <div class="row">
                        <%= link_to public_cd_path(cd.id) do %>
               	            <%= attachment_image_tag cd, :jacket_image, :fill, 100, 100, size: '170x170', fallback: "no_image.jpg" %>
                        <% end %>
                    </div>
                    <div class="row">
                        <%= cd.artist.artist_name %>
                        <%= cd.label.label_name %>
                        <%= cd.genre.genre_name %>
                        <%= cd.cd_title %>
                        <%= cd.release_date.strftime("%m月%d日") %>
                        <%= cd.price %>
                        <%= cd.status %>
                    </div>
                    <div class="row">
                        <%= form_for [:public, @interest_new], url: public_interests_path(cd_id: cd.id) do |f| %>
                            <%= f.submit "気になる",class: "btn btn-primary" %>
                        <% end %>
                        <%= form_for [:public, @cart_cd_new], url: public_cart_cds_path(cd_id: cd.id) do |f| %>
                            <%= f.number_field :cart_count, value:1, min:1, max:10, size:1 %>
                            <%= f.submit "カートに入れる",class: "btn btn-danger" %>
                        <% end %>
                    </div>
                </div>
              <% end %>
        </div>

        <div class="col-md-3">
          <p>レビュー</p>
            <% @reviews.each do |r| %>
                <div class="row">
                    <div class="col-md-12">
                        <%= attachment_image_tag r.cd, :jacket_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %>
                        <%= attachment_image_tag r.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40', class: "img-circle"%>
                        <%= r.cd.cd_title %>
                        <%= r.user.firstname_kana %>
                        <%= r.comment %>
                     </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="pagiWrapper">
        <%= paginate @cds %>
    </div>
</div>