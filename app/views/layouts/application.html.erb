<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compact Discers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>


      <header>
        <nav class="navbar navbar-fixed-top" style="background-color: #f2f2f2;　width:100%">
          <div class="navbar-header navbar-left">
            <%= link_to image_tag("logo.png", class: "image", height: "80", ), root_path %>
          </div>
          <div class="serch_bar">
            <div class="col-md-5">
              <div class="col-md-3">
                <%= form_tag(public_search_path, :method => 'get') do %>
                  <%= select_tag(:option, options_for_select([["指定なし", "1"],["アーティスト","2"],["CDタイトル","3"]]))%>
              </div>
              <div class="col-md-8">
                  <%= text_field_tag :search, '', {class: 'form-control'} %>
              </div>
              <div class="col-md-1">
                  <%= submit_tag '検索' %>
                  <% end %>
              </div>
            </div>
          </div>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to"マイページ", public_user_path(current_user.id) %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span>ログアウト</span>
                <% end %>
              </li>

            <% else %>
              <li class="nav-item">
                <%= link_to"会員登録", new_user_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to"ログイン", new_user_session_path %>
              </li>
            <% end %>
          </ul>
        </nav>
      </header>

      <body>
        <%= yield %>
      </body>

        <footer class="footer">
          <div class="container">
            <div class="row">
              <div class="top-message col-xs-3 col-xs-offset-11">CopyRight Infratop.Inc
              </div>
            </div>
          </div>
        </footer>

  </body>
</html>


